{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["jest"],
    "lib": ["dom", "es2015"],  // Ensure 'es2015' is included

  },
  "jest": {
    "preset": "ts-jest"
  },
  "include": ["src","tests"]
}